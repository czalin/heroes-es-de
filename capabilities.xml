<themeCapabilities>
    <themeName>Heroes</themeName>

    <aspectRatio>16:9</aspectRatio>
    <aspectRatio>4:3</aspectRatio>

    <fontSize>small</fontSize>
    <fontSize>large</fontSize>

    <colorScheme name="dark">
        <label>Dark</label>
    </colorScheme>

    <colorScheme name="light">
        <label>Light</label>
    </colorScheme>

    <transitions name="fadeAndInstant">
        <selectable>false</selectable>
        <systemToSystem>fade</systemToSystem>
        <systemToGamelist>slide</systemToGamelist>
        <gamelistToGamelist>instant</gamelistToGamelist>
        <gamelistToSystem>slide</gamelistToSystem>
        <startupToSystem>fade</startupToSystem>
    </transitions>

    <variant name="heroes">
        <label>Heroes</label>
        <selectable>true</selectable>
    </variant>

    <variant name="heroines">
        <label>Heroines</label>
        <selectable>true</selectable>
    </variant>

    <variant name="tavern-heroes">
        <label>Tavern Heroes</label>
        <selectable>true</selectable>
    </variant>

    <variant name="tavern-heroines">
        <label>Tavern Heroines</label>
        <selectable>true</selectable>
    </variant>

    <variant name="chill-heroes">
        <label>Chill Heroes</label>
        <selectable>true</selectable>
    </variant>

    <variant name="chill-heroines">
        <label>Chill Heroines</label>
        <selectable>true</selectable>
    </variant>
</themeCapabilities>